<%= content_for :title, 'Add Departments' %>
<%= render 'api/v1/shared/header/header', user: current_user %>

<main role="main">
  <div class="container">
    <div class="py-5">
      <!--<h2>Add Departments</h2>-->
    </div>

    <div class="row">
      <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-muted">Total departments</span>
          <span class="badge badge-secondary badge-pill"><%= total_departments %></span>
        </h4>

        <% if departments.present? %>
          <%= render 'api/v1/departments/list_group_departments', departments: departments %>
        <% end %>

      </div>
      <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Add Department</h4>

        <%= render 'api/v1/shared/notifications/notice_alerts', notice: notice %>

        <%= render 'api/v1/shared/notifications/form_errors', model: @department %>

        <%= form_for @department, url: { action: 'create'} do |f|  %>
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control',
                                 placeholder: 'e.g: pre-school, JHS, etc.', required: true %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <%= f.submit :Save, class: 'btn btn-primary' %>
              </div>
            </div>
        <% end %>
      </div>

    </div>
  </div>
</main>

