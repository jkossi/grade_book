<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th width="2%">#</th>
        <th width="20%">First Name</th>
        <th width="20%">Last Name</th>
        <th width="24%">Email</th>
        <th width="2%">Sex</th>
        <th width="10%">Role</th>
        <th width="12%">Phone</th>
        <th width="10%">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% staffs.each_with_index do |staff, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= staff.first_name.capitalize %></td>
          <td><%= staff.last_name.capitalize %></td>
          <td><%= staff.email %></td>
          <td><%= staff.gender.capitalize %></td>
          <td><%= display_role(staff.role_id, staff.user_id) %></td>
          <td><%= staff.phone %></td>
          <td>
            <%= link_to 'Edit', edit_staff_path(staff), class: 'text-muted' %> |
            <%= link_to_unless staff.user_id.nil?, 'Delete', staff_path(staff), method: :delete, class: 'text-muted', data: { confirm: delete_message('staff') } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

