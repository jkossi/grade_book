<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
    <tr>
      <th width="2%">#</th>
      <th width="20%">Class Name</th>
      <th width="20%">Class Teacher</th>
      <th width="24%">Department</th>
      <th width="10%">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% classrooms.each_with_index do |classroom, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= classroom.name %></td>
          <td><%= classroom.teacher.user.full_name %></td>
          <td><%= classroom.department.name %></td>
          <td>
            <%= link_to 'Edit', "/staffs/edit_classroom/#{classroom.id}", class: 'text-muted' %> |
            <%= link_to_if current_user.id === classroom.user_id, 'Delete', "/staffs/class_rooms/#{classroom.id}", method: :delete,
                                                                                                                   class: 'text-muted',
                                                                                                                   data: { confirm: delete_message('class') } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

