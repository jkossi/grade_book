<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
    <tr>
      <th width="2%">#</th>
      <th width="20%">First Name</th>
      <th width="20%">Middle Name</th>
      <th width="20%">Last Name</th>
      <th width="2%">Sex</th>
      <th width="10%">Class</th>
      <th width="12%">Created By</th>
      <th width="10%">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% students.each_with_index do |student, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= student.first_name.capitalize %></td>
          <td><%= student.middle_name.capitalize %></td>
          <td><%= student.last_name.capitalize %></td>
          <td><%= student.gender.capitalize %></td>
          <td><%= student.class_room.name %></td>
          <td>
            <span class="badge badge-secondary badge-pill">
              <%= display_created_by(student, current_user) %>
            </span>
          </td>
          <td>
            <%= link_to 'Edit', "/staffs/edit_student/#{student.id}", class: 'text-muted' %> |
            <%= link_to_if is_admin?(current_user), 'Delete', "/staffs/students/#{student.id}", method: :delete, class: 'text-muted', data: { confirm: delete_message('student')  } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

