<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th width="2%">#</th>
        <th width="20%">Start Date</th>
        <th width="20%">End Date</th>
        <th width="24%">Year</th>
        <th width="2%">Term</th>
        <th width="10%">Status</th>
        <th width="12%">Created by</th>
        <th width="10%">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% academic_sessions.each_with_index do |a_session, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= a_session.start_date %></td>
          <td><%= a_session.end_date %></td>
          <td><%= a_session.year %></td>
          <td><%= a_session.term %></td>
          <td><%= academic_session_status(a_session.closed) %></td>
          <td>
            <span class="badge badge-secondary badge-pill">
              <%= initials(a_session.user) %>
            </span>
          </td>
          <td>
            <%= link_to 'Edit', edit_academic_session_path(a_session), class: 'text-muted' %> |
            <%= link_to_if current_user.id === a_session.user_id, 'Delete', academic_session_path(a_session), method: :delete, class: 'text-muted', data: { confirm: delete_message('academic session') } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

