<% content_for :title, 'Forgot password'  %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-signin', method: :post }) do |f| %>
  <%= image_tag 'https://getbootstrap.com/assets/brand/bootstrap-solid.svg', width: 72, height: 72 %>
  <header class="text-center">
    <h4 class="text-primary my-3">Elican Report Card App</h4>
    <h5 class="mb-3 font-weight-normal">Forgot your password?</h5>
  </header>

  <%= devise_error_messages! %>

  <%= label_tag 'inputEmail', 'Email address', class: 'sr-only' %>
  <%= f.email_field :email, id: 'inputEmail', class: 'form-control mb-3',
                            placeholder: 'Email address', autofocus: true,
                            autocomplete: 'email', required: true %>

  <%= f.submit "Reset password", class: 'btn btn-lg btn-primary btn-block' %>
  <p class="mt-5 mb-3 text-muted">Powered by Elican &copy; 2017-2018 </p>

  <%= render 'devise/shared/links' %>

<% end %>





